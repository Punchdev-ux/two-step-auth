<!-- res/layout/calculator_buttons.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Row 1: Clear and Operations -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/btn_clear"
            style="@style/Calculator.Button.Operation.Red"
            android:text="C"
            tools:ignore="HardcodedText"/>

        <Button
            android:id="@+id/btn_divide"
            style="@style/Calculator.Button.Operation"
            android:text="รท"
            tools:ignore="HardcodedText"/>

        <Button
            android:id="@+id/btn_multiply"
            style="@style/Calculator.Button.Operation"
            android:text="ร"
            tools:ignore="HardcodedText"/>

        <Button
            android:id="@+id/btn_subtract"
            style="@style/Calculator.Button.Operation"
            android:layout_marginEnd="0dp"
            android:text="-"
            tools:ignore="HardcodedText"/>
    </LinearLayout>

    <!-- Row 2: Numbers 7-9 and + -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/btn_7"
            style="@style/Calculator.Button.Number"
            android:text="7"
            tools:ignore="HardcodedText"/>

        <Button
            android:id="@+id/btn_8"
            style="@style/Calculator.Button.Number"
            android:text="8"
            tools:ignore="HardcodedText"/>

        <Button
            android:id="@+id/btn_9"
            style="@style/Calculator.Button.Number"
            android:text="9"
            tools:ignore="HardcodedText"/>

        <Button
            android:id="@+id/btn_add"
            style="@style/Calculator.Button.Operation"
            android:layout_marginEnd="0dp"
            android:text="+"
            tools:ignore="HardcodedText"/>
    </LinearLayout>

    <!-- Row 3 & 4 Combined -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <!-- Row 3: Numbers 4-6 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <Button
                    android:id="@+id/btn_4"
                    style="@style/Calculator.Button.Number"
                    android:text="4"
                    tools:ignore="HardcodedText"/>
                <Button
                    android:id="@+id/btn_5"
                    style="@style/Calculator.Button.Number"
                    android:text="5"
                    tools:ignore="HardcodedText"/>
                <Button
                    android:id="@+id/btn_6"
                    style="@style/Calculator.Button.Number"
                    android:layout_marginEnd="0dp"
                    android:text="6"
                    tools:ignore="HardcodedText"/>
            </LinearLayout>

            <!-- Row 4: Numbers 1-3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_1"
                    style="@style/Calculator.Button.Number"
                    android:text="1"
                    tools:ignore="HardcodedText"/>
                <Button
                    android:id="@+id/btn_2"
                    style="@style/Calculator.Button.Number"
                    android:text="2"
                    tools:ignore="HardcodedText"/>
                <Button
                    android:id="@+id/btn_3"
                    style="@style/Calculator.Button.Number"
                    android:layout_marginEnd="0dp"
                    android:text="3"
                    tools:ignore="HardcodedText"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Equals Button (spans two rows) -->
        <Button
            android:id="@+id/btn_equals"
            style="@style/Calculator.Button.Operation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="0dp"
            android:backgroundTint="#1A1A1A"
            android:text="="
            tools:ignore="HardcodedText"/>
    </LinearLayout>

    <!-- Row 5: 0 and Decimal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_0"
            style="@style/Calculator.Button.Number"
            android:layout_weight="2"
            android:text="0"
            tools:ignore="HardcodedText"
            android:layout_width="0dp" />

        <Button
            android:id="@+id/btn_decimal"
            style="@style/Calculator.Button.Number"
            android:layout_marginEnd="0dp"
            android:text="."
            tools:ignore="HardcodedText"/>
    </LinearLayout>
</LinearLayout>