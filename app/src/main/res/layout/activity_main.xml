<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5F5F5">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <!-- Dark Header with User Info -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#1A1A1A"
            android:padding="20dp">

            <!-- User Details -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/welcome_back"
                    android:textSize="16sp"
                    android:textColor="#90A4AE"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/user_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/user_example_com"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <!-- Logout Button in Header -->
            <Button
                android:id="@+id/logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/logout"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:backgroundTint="#424242"
                app:cornerRadius="8dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                tools:ignore="RelativeOverlap" />
        </RelativeLayout>

        <!-- White Rounded Container -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-30dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="30dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="25dp"
                android:paddingTop="35dp">

                <!-- Calculator Section Title -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mini_calculator"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A"
                    android:gravity="center"
                    android:layout_marginBottom="25dp" />

                <!-- Calculator Display -->
                <TextView
                    android:id="@+id/calculator_display"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:text="0"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A"
                    android:gravity="end|center_vertical"
                    android:background="#F8F9FA"
                    android:padding="20dp"
                    android:layout_marginBottom="20dp"
                    app:cornerRadius="12dp"
                    tools:ignore="HardcodedText" />

                <!-- Calculator Buttons Grid -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Row 1: Clear and Operations -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">

                        <Button
                            android:id="@+id/btn_clear"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:text="C"
                            android:textSize="20sp"
                            android:backgroundTint="#FF5252"
                            app:cornerRadius="12dp"
                            android:layout_marginEnd="8dp"
                            tools:ignore="ButtonStyle,HardcodedText,VisualLintButtonSize" />

                        <Button
                            android:id="@+id/btn_divide"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:text="รท"
                            android:textSize="20sp"
                            android:backgroundTint="#546E7A"
                            app:cornerRadius="12dp"
                            android:layout_marginEnd="8dp"
                            tools:ignore="ButtonStyle,HardcodedText,VisualLintButtonSize" />

                        <Button
                            android:id="@+id/btn_multiply"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:text="ร"
                            android:textSize="20sp"
                            android:backgroundTint="#546E7A"
                            app:cornerRadius="12dp"
                            android:layout_marginEnd="8dp"
                            tools:ignore="ButtonStyle,HardcodedText,VisualLintButtonSize" />

                        <Button
                            android:id="@+id/btn_subtract"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:text="-"
                            android:textSize="20sp"
                            android:backgroundTint="#546E7A"
                            app:cornerRadius="12dp"
                            tools:ignore="ButtonStyle,HardcodedText,VisualLintButtonSize" />
                    </LinearLayout>

                    <!-- Row 2: Numbers 7-9 and + -->
                    <LinearLayout
                        style="?android:attr/buttonBarStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">

                        <Button
                            android:id="@+id/btn_7"
                            style="?android:attr/buttonBarButtonStyle"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:backgroundTint="#37474F"
                            android:text="7"
                            android:textSize="20sp"
                            app:cornerRadius="12dp"
                            tools:ignore="HardcodedText,VisualLintButtonSize,TextContrastCheck" />

                        <Button
                            android:id="@+id/btn_8"
                            style="?android:attr/buttonBarButtonStyle"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:backgroundTint="#37474F"
                            android:text="@string/_8"
                            android:textSize="20sp"
                            app:cornerRadius="12dp"
                            tools:ignore="VisualLintButtonSize,TextContrastCheck" />

                        <Button
                            android:id="@+id/btn_9"
                            style="?android:attr/buttonBarButtonStyle"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:backgroundTint="#37474F"
                            android:text="9"
                            android:textSize="20sp"
                            app:cornerRadius="12dp"
                            tools:ignore="HardcodedText,VisualLintButtonSize,TextContrastCheck" />

                        <Button
                            android:id="@+id/btn_add"
                            style="?android:attr/buttonBarButtonStyle"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:backgroundTint="#546E7A"
                            android:text="+"
                            android:textSize="20sp"
                            app:cornerRadius="12dp"
                            tools:ignore="HardcodedText,VisualLintButtonSize,TextContrastCheck" />
                    </LinearLayout>

                    <!-- Row 3: Numbers 4-6 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">

                        <Button
                            android:id="@+id/btn_4"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:text="4"
                            android:textSize="20sp"
                            android:backgroundTint="#37474F"
                            app:cornerRadius="12dp"
                            android:layout_marginEnd="8dp"
                            tools:ignore="HardcodedText,VisualLintButtonSize" />

                        <Button
                            android:id="@+id/btn_5"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:text="5"
                            android:textSize="20sp"
                            android:backgroundTint="#37474F"
                            app:cornerRadius="12dp"
                            android:layout_marginEnd="8dp"
                            tools:ignore="HardcodedText,VisualLintButtonSize" />

                        <Button
                            android:id="@+id/btn_6"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:text="6"
                            android:textSize="20sp"
                            android:backgroundTint="#37474F"
                            app:cornerRadius="12dp"
                            android:layout_marginEnd="8dp"
                            tools:ignore="HardcodedText,VisualLintButtonSize" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_weight="1" />
                    </LinearLayout>

                    <!-- Row 4: Numbers 1-3 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">

                        <Button
                            android:id="@+id/btn_1"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:text="1"
                            android:textSize="20sp"
                            android:backgroundTint="#37474F"
                            app:cornerRadius="12dp"
                            android:layout_marginEnd="8dp"
                            tools:ignore="HardcodedText,VisualLintButtonSize" />

                        <Button
                            android:id="@+id/btn_2"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:text="2"
                            android:textSize="20sp"
                            android:backgroundTint="#37474F"
                            app:cornerRadius="12dp"
                            android:layout_marginEnd="8dp"
                            tools:ignore="HardcodedText,VisualLintButtonSize" />

                        <Button
                            android:id="@+id/btn_3"
                            style="?android:attr/buttonBarStyle"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:text="3"
                            android:textSize="20sp"
                            android:backgroundTint="#37474F"
                            app:cornerRadius="12dp"
                            android:layout_marginEnd="8dp"
                            tools:ignore="HardcodedText,VisualLintButtonSize" />

                        <View
                            style="?android:attr/buttonBarButtonStyle"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            tools:ignore="SpeakableTextPresentCheck" />
                    </LinearLayout>

                    <!-- Row 5: 0, Decimal, and Equals -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_0"
                            style="?android:attr/buttonBarButtonStyle"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="2"
                            android:backgroundTint="#37474F"
                            android:text="0"
                            android:textSize="20sp"
                            app:cornerRadius="12dp"
                            tools:ignore="HardcodedText,VisualLintButtonSize,TextContrastCheck,DuplicateSpeakableTextCheck" />

                        <Button
                            android:id="@+id/btn_decimal"
                            style="?android:attr/buttonBarButtonStyle"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:backgroundTint="#37474F"
                            android:text="."
                            android:textSize="20sp"
                            app:cornerRadius="12dp"
                            tools:ignore="HardcodedText,VisualLintButtonSize,TextContrastCheck" />

                        <Button
                            android:id="@+id/btn_equals"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:text="="
                            android:textSize="20sp"
                            android:backgroundTint="#1A1A1A"
                            app:cornerRadius="12dp"
                            tools:ignore="ButtonStyle,HardcodedText,VisualLintButtonSize" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>