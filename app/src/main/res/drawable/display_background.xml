<?xml version="1.0" encoding="utf-8"?>
<!--
This selector defines the appearance for different states.
- When the view is "pressed", it will use the first shape (darker).
- In all other cases (the default state), it will use the second shape.
-->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- State: When the view is pressed down -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <!-- A slightly darker color for the pressed state -->
            <solid android:color="#E9ECEF" />
            <corners android:radius="12dp" />
            <stroke android:width="1dp" android:color="#DDE0E3" />
        </shape>
    </item>

    <!-- Default State: Not pressed (the original shape) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F8F9FA" />
            <corners android:radius="12dp" />
            <stroke android:width="1dp" android:color="#E0E0E0" />
        </shape>
    </item>

</selector>